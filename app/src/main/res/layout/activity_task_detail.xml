<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.detailTask.activity.TaskDetailActivity">

    <TextView
        android:id="@+id/taskInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv_priority_star"
        tools:text="Task is here"
        android:textSize="18sp"/>

    <ImageView
        android:id="@+id/iv_priority_star"
        android:layout_width="15dp"
        android:layout_height="15dp"
        tools:src="@drawable/ic_star_outline_svgrepo_com"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginHorizontal="5dp"
        />

    <TextView
        android:id="@+id/dateInfo"
        android:layout_width="wrap_content"
        tools:text="Date"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/taskInfo"
        app:layout_constraintTop_toBottomOf="@id/taskInfo"
        android:layout_marginTop="5dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>